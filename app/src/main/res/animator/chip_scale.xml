<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado Seleccionado: Escalar 1.1x y elevar -->
    <item android:state_checked="true">
        <set>
            <objectAnimator android:propertyName="scaleX" android:valueTo="1.1" android:duration="200" android:valueType="floatType"/>
            <objectAnimator android:propertyName="scaleY" android:valueTo="1.1" android:duration="200" android:valueType="floatType"/>
            <objectAnimator android:propertyName="translationZ" android:valueTo="8dp" android:duration="200" android:valueType="floatType"/>
        </set>
    </item>
    
    <!-- Estado Normal: Volver a tamaÃ±o original -->
    <item>
        <set>
            <objectAnimator android:propertyName="scaleX" android:valueTo="1.0" android:duration="200" android:valueType="floatType"/>
            <objectAnimator android:propertyName="scaleY" android:valueTo="1.0" android:duration="200" android:valueType="floatType"/>
            <objectAnimator android:propertyName="translationZ" android:valueTo="0dp" android:duration="200" android:valueType="floatType"/>
        </set>
    </item>
</selector>
