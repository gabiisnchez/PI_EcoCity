<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Fondo Degradado (bg_gradient.xml)
    Un degradado lineal de tres colores (verde oscuro a verde claro).
    Utilizado en cabeceras y fondos para dar identidad de marca.
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <gradient
        android:angle="45"
        android:startColor="#1B5E20"
        android:centerColor="#2E7D32"
        android:endColor="#8BC34A"
        android:type="linear" />
</shape>
