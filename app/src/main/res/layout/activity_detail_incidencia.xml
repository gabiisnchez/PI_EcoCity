<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Image Area (Placeholder for multimedia later) -->
        <ImageView
            android:id="@+id/ivHeader"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@android:drawable/ic_menu_gallery"
            android:scaleType="center"
            android:background="#F5F5F5"
            app:tint="#BDBDBD"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bottom_sheet_curve"
            android:layout_marginTop="-30dp"
            app:layout_constraintTop_toBottomOf="@+id/ivHeader"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="80dp"
            app:layout_constraintTop_toBottomOf="@+id/ivHeader"
            android:layout_marginTop="-20dp">

            <!-- Title and Status Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvTitulo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Título de la Incidencia"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/colorTextPrimary"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Urgency Chip -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardUrgencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F5F5F5"
                    android:layout_marginEnd="8dp">
                    <TextView
                        android:id="@+id/tvUrgencia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:text="URGENCIA ALTA"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#616161"/>
                </androidx.cardview.widget.CardView>

                <!-- Status Chip -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#E3F2FD">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/ivEstadoIcon"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@android:drawable/ic_popup_sync"
                            app:tint="#1976D2"
                            android:layout_marginEnd="4dp"/>
                        <TextView
                            android:id="@+id/tvEstado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EN PROCESO"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESCRIPCIÓN"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:textColor="#9E9E9E"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción detallada de la incidencia..."
                android:textSize="16sp"
                android:textColor="#424242"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UBICACIÓN"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:textColor="#9E9E9E"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F5F5F5">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@android:drawable/ic_dialog_map"
                            app:tint="@color/colorPrimary"/>
                        
                        <TextView
                            android:id="@+id/tvLocationText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ubicación Pendiente"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#424242"
                            android:layout_marginStart="12dp"/>
                    </LinearLayout>

                    <!-- Map View (Lite Mode) -->
                    <com.google.android.gms.maps.MapView
                        android:id="@+id/mapView"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginTop="8dp"
                        app:liteMode="true"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit"
            app:backgroundTint="@color/colorPrimary"
            app:tint="@android:color/white"
            android:layout_margin="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
