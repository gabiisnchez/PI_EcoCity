<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Layout Principal (MainActivity)
    Contenedor principal usando ConstraintLayout para posicionamiento flexible.
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".MainActivity">

    <!-- Título de la Aplicación -->
    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="32sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón de Perfil de Usuario -->
    <ImageView
        android:id="@+id/btnProfile"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_avatar_user"
        app:tint="@color/colorPrimary"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Perfil" />

    <!-- Subtítulo Informativo -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_incidencia"
        android:textSize="16sp"
        android:textColor="@color/colorTextSecondary"
        android:letterSpacing="0.15"
        android:textAllCaps="true"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvAppTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 
        Lista de Incidencias (RecyclerView)
        Ocupa el espacio restante en la pantalla.
        Tiene padding inferior para evitar que el FAB tape el último elemento.
    -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="0dp"
        android:paddingBottom="88dp"
        app:layout_constraintTop_toBottomOf="@id/chipGroupSort"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Filtros de Ordenación (Definido DESPUÉS para pintarse encima) -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupSort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="8dp"
        android:layout_marginBottom="4dp"
        android:elevation="10dp"
        android:outlineProvider="none"
        app:chipSpacingHorizontal="16dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipUrgency"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urgencia"
            app:chipIcon="@android:drawable/ic_menu_sort_by_size"
            android:checked="true"
            android:stateListAnimator="@animator/chip_scale"
            app:chipBackgroundColor="@color/chip_background_selector" 
            android:textColor="@color/chip_text_selector"
            app:chipIconTint="@color/chip_text_selector"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipNearby"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cercanas"
            app:chipIcon="@android:drawable/ic_menu_mylocation"
            android:stateListAnimator="@animator/chip_scale"
            app:chipBackgroundColor="@color/chip_background_selector" 
            android:textColor="@color/chip_text_selector"
            app:chipIconTint="@color/chip_text_selector"/>

    </com.google.android.material.chip.ChipGroup>


    <!-- 
        Estado Vacío (Empty State)
        Se muestra solo cuando no hay incidencias en la lista.
    -->
    <LinearLayout
        android:id="@+id/tvEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle">
        
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/ic_menu_report_image"
            app:tint="@color/colorIconInactive"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_state_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginTop="24dp"/>
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_state_desc"
            android:textSize="16sp"
            android:textColor="@color/colorTextSecondary"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Botón Flotante (FAB) para Chat de Soporte -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_menu_help"
        app:layout_constraintBottom_toTopOf="@+id/fabAdd"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Soporte"
        app:tint="@color/colorPrimary"
        app:backgroundTint="@color/white"
        app:elevation="6dp"/>

    <!-- Botón Flotante (FAB) para Añadir Incidencia -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/content_desc_add"
        app:tint="@color/white"
        app:backgroundTint="@color/colorPrimary"
        app:elevation="6dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
