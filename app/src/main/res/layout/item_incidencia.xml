<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Item de Lista de Incidencias
    Representa una incidencia individual en el RecyclerView principal.
    Muestra título, urgencia, descripción breve, estado de ubicación y estado de resolución.
-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Franja de color decorativa (Marca de marca) -->
        <View
            android:id="@+id/statusBar"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Fila Superior: Título y Chip de Urgencia -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvTitulo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end"/>



                <!-- Chip de Urgencia Minimalista -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/chipUrgencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/colorSurfaceVariant"
                    app:cardElevation="0dp">
                    
                    <TextView
                        android:id="@+id/tvUrgencia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorTextSecondary"
                        android:textAllCaps="true"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorTextSecondary"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="12dp"/>

            <!-- Fila Inferior: Ubicación y Estado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <ImageView
                    android:id="@+id/ivLocationIcon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_location_pin"
                    app:tint="@color/colorPrimary"
                    android:contentDescription="Location"/>

                <TextView
                    android:id="@+id/tvLocationStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/item_location_registered"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <!-- Badge de Estado -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/chipEstado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F5F5F5">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp">

                        <ImageView
                            android:id="@+id/ivEstadoIcon"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginEnd="4dp"
                            android:src="@android:drawable/ic_menu_info_details"
                            app:tint="#9E9E9E"/>

                        <TextView
                            android:id="@+id/tvEstado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05"
                            android:textColor="#9E9E9E"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
