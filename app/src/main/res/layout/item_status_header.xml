<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Item Cabecera de Sección (Expandible)
    Se utiliza para separar y agrupar incidencias por estado.
    Permite expandir o colapsar la sección.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:layout_marginTop="8dp">

    <!-- Indicador de Color del Estado -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardStatusColor"
        android:layout_width="4dp"
        android:layout_height="24dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/colorPrimary"/>

    <!-- Título de la Sección con Contador -->
    <TextView
        android:id="@+id/tvStatusTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginStart="12dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="#E0E0E0"
        android:layout_marginStart="12dp"/>

    <!-- Icono de Expandir/Colapsar -->
    <ImageView
        android:id="@+id/ivExpand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/arrow_down_float"
        app:tint="@color/colorIconTint"/>

</LinearLayout>
